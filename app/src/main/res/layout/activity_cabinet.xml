<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cabinet"
    android:background="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linksvisit"
        android:visibility="gone">
        <ImageView
            android:id="@+id/qrimg"
            android:layout_width="match_parent"
            android:layout_height="400sp"
            android:layout_marginHorizontal="20sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveqr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/qrimg"
            android:layout_marginHorizontal="40sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/button_style"
            tools:ignore="SpeakableTextPresentCheck"
            android:text="@string/save"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nfc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/saveqr"
            android:layout_marginHorizontal="40sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/button_style"
            tools:ignore="SpeakableTextPresentCheck"
            android:text="@string/sharenfc"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nfc"
            android:layout_marginHorizontal="40sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/button_style"
            tools:ignore="SpeakableTextPresentCheck"
            android:text="@string/shareviasmth"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mycard"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/settings">
            <ImageButton
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/img_2"
                android:scaleType="fitCenter"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/photocontacts"
            android:layout_below="@id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:src="@drawable/img_4"
                android:layout_margin="30sp"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Text 1"
                        android:textColor="@color/black"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Text 2"
                        android:textColor="@color/black"
                        android:textAlignment="center"/>

                    <TextView
